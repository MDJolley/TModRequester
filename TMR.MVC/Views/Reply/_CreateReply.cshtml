@model TMR.Models.ReplyCreate


@using (Html.BeginForm("CreateReply", "Reply", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="reply-create">
      
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <h5 style="float:left;position:relative;top:-2px;background-color:white;padding:5px;border-radius:3px;box-shadow:0 0 0 2px black;">Leave a Reply:</h5>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Body, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
            </div>
        </div>
        @Html.HiddenFor(model=>model.PostID)

        <div style="position:relative; top: -20px;float:right"class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Post Reply" class="btn btn-default" />
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
