@model IEnumerable<TMR.Models.ReplyListItem>
    @{bool slvd = (bool)this.ViewData["SolvedStatus"];}
    

@foreach (var item in Model)
{
    <div class="reply-list">
        <div class="snapshot">

            @Html.Partial("../Profile/_GetProfileSnapshot", (TMR.Models.ProfileDetail)item.ProfileDetail, new ViewDataDictionary { { "user", item.UserID } })
        
        </div>
        <div class="reply-content">
            <div>
                <p>
                    @Html.DisplayFor(modelItem => item.Body)
                </p>
            </div>
            <div class="reply-footer">
                @if (!slvd && (bool)ViewData["ownerTest"]){
                @Html.Partial("../Reply/_Solution", null, new ViewDataDictionary { { "ReplyID", item.ID } })
                }
            </div>
        </div>
        <br class="spacer" />

    </div>
                }
